            <label for="address">Address</label>
            <textarea
                    class="form-control"
                    id="address"
                    name="address"
            ></textarea>
        </div>

        <div class="form-group">
            <label for="upload">Upload Images</label>
            <input type="text"
                   class="form-control"
                   name="image"
